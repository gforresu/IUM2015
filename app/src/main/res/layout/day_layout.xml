<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alamkanak.weekview.WeekView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        android:id="@+id/dayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:todayHeaderTextColor="#0080ff"
        app:eventTextColor="@android:color/black"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:firstDayOfWeek="monday"
        app:headerColumnPadding="10dp"
        app:headerColumnTextColor="#8f000000"
        app:headerRowPadding="15dp"
        app:columnGap="13dp"
        app:dayNameLength="length_long"
        app:noOfVisibleDays="1"
        app:headerRowBackgroundColor="#1848adff"
        app:dayBackgroundColor="@android:color/white"
        app:todayBackgroundColor="@android:color/white"
        app:headerColumnBackground="#1848adff" />


    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_gravity="end|bottom"
        android:tint="@android:color/white"
        android:src="@drawable/ic_action_new"
        android:background="@drawable/circle"
        android:contentDescription="@string/info_add_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="23dp" />

</RelativeLayout>