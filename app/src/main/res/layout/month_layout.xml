<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/monthLayout"
    android:background="#ffffff">

    <com.disegnator.robotocalendar.RobotoCalendarView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/robotoCalendarPicker"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="0.84"
        android:orientation="vertical">


    </com.disegnator.robotocalendar.RobotoCalendarView>

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="29dp"
        android:tint="@android:color/white"
        android:src="@drawable/ic_action_new"
        android:background="@drawable/circle"
        android:contentDescription="@string/info_add_button"
        android:visibility="invisible"
        android:layout_below="@+id/robotoCalendarPicker"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hintMonthView"
        android:id="@+id/hintMonth"
        android:textColor="#39499c"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelButtonViewScheduling"
        android:id="@+id/viewScheduling"
        android:visibility="invisible"
        android:layout_alignTop="@+id/add_button"
        android:layout_alignParentStart="true"
        android:background="#39499c"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />

</RelativeLayout>